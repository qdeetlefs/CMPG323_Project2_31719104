@model CMPG323_Project2.Models.GalleryDetailModel

<div class="container card-body-content">
    <div class="row image-detail-container">
        <div class="image-detail">
            <img src="@Model.Url" alt="@Model.Title" />
        </div>
    </div>
    <div class="row image-detail-meta">
        <span> Title: @Model.Title &nbsp;</span>
        <span> Uploaded: @Model.Created &nbsp;</span>
        <span> Geolocation: @Model.Geolocation &nbsp;</span>
        <span> Captured date: @Model.CapturedDate &nbsp;</span>
        <span> Captured by: @Model.CapturedBy </span>
    </div>
    <div class="row controlls">
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">Back To Gallery </a>
        &nbsp;
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        &nbsp;
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>

</div>
